import sys

def greet_by_time():
    while True:
        # 標準エラー出力でプロンプトを表示
        print("現在時刻を入力してください（例: 18:00）: ", file=sys.stderr, end="")
        time_input = input()

        # 入力が無効な場合
        if not time_input or ':' not in time_input:
            print("無効な時刻形式です。例: 18:00", file=sys.stderr)
            continue  # 再度入力を促す

        try:
            # 入力を時と分に分解
            hour, minute = map(int, time_input.split(':'))
        except ValueError:
            print("時刻は数値で入力してください。例: 18:00", file=sys.stderr)
            continue  # 再度入力を促す

        # 時刻が範囲外の場合
        if not (0 <= hour < 24 and 0 <= minute < 60):
            print("時刻が無効です。", file=sys.stderr)
            continue  # 再度入力を促す

        # 挨拶を決定
        if hour >= 18 or hour < 4:
            print("こんばんは")
        elif 4 <= hour < 10:
            print("おはようございます")
        elif 10 <= hour < 18:
            print("こんにちは")
        break  # 正常に終了する場合はループを抜ける

if __name__ == "__main__":
    greet_by_time()

